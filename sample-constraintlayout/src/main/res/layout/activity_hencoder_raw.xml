<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.pdog18.transition.constraintlayout.HenCoderWithConstraintLayout" >

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:id="@+id/guide"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"
            android:layout_height="wrap_content"/>

    <TextView
            android:text="H"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:id="@+id/h"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="36sp"
    />
    <TextView
            android:text="E"
            android:layout_width="30dp"
            app:layout_constraintTop_toBottomOf="@id/h"
            android:layout_height="40dp"
            android:id="@+id/e1"
            app:layout_constraintStart_toStartOf="@id/h"
            android:textSize="36sp"
    />

    <TextView
            android:text="N"
            app:layout_constraintStart_toStartOf="@id/h"
            app:layout_constraintTop_toBottomOf="@id/e1"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:id="@+id/n"
            android:textSize="36sp"
    />
    <TextView

            app:layout_constraintTop_toBottomOf="@id/n"
            android:text="C"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:id="@+id/c1"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="36sp"
    />
    <TextView
            android:text="O"
            android:layout_width="30dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/c1"
            app:layout_constraintEnd_toEndOf="@id/c1"
            android:id="@+id/o1"
            android:textSize="36sp"
    />
    <TextView
            android:text="D"
            android:layout_width="30dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="@id/c1"
            android:id="@+id/d1"
            app:layout_constraintTop_toBottomOf="@id/o1"
            android:textSize="36sp"
    />
    <TextView

            android:text="E"
            android:layout_width="30dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="@id/c1"
            app:layout_constraintTop_toBottomOf="@id/d1"
            android:id="@+id/e2"
            android:textSize="36sp"
    />
    <TextView
            android:text="R"
            app:layout_constraintEnd_toEndOf="@id/c1"
            android:layout_width="30dp"
            app:layout_constraintTop_toBottomOf="@id/e2"
            android:layout_height="40dp"
            android:id="@+id/r"
            android:textSize="36sp"
    />
</androidx.constraintlayout.widget.ConstraintLayout>