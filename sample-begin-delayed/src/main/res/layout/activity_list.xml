<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        tools:context=".FourCardSelectActivity">


    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:id="@+id/guide_top_v"
            app:layout_constraintGuide_percent="0.6"
            android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:id="@+id/guide_bottom_v"
            app:layout_constraintGuide_percent="0.5"
            android:layout_height="wrap_content"/>


    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_h"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6"
            android:layout_height="wrap_content"/>
    <View
            android:id="@+id/view_start_top"
            android:layout_width="0dp"
            android:background="@color/colorPrimary"
            android:onClick="onChangeGuide"
            android:tag="0.6,0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/guide_h"
            app:layout_constraintEnd_toStartOf="@id/guide_top_v"
            android:layout_margin="8dp"
            android:layout_height="0dp"/>


    <View
            android:onClick="onChangeGuide"
            android:id="@+id/view_end_top"
            android:layout_margin="8dp"
            android:tag="0.4,0.6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guide_top_v"
            app:layout_constraintBottom_toTopOf="@id/guide_h"
            android:layout_width="0dp"
            android:background="@color/colorPrimary"
            android:layout_height="0dp"/>


    <View android:onClick="onChangeGuide"
          android:layout_margin="8dp"
          android:tag="0.6,0.4"
          android:id="@+id/view_start_bottom"
          app:layout_constraintTop_toBottomOf="@id/guide_h"
          app:layout_constraintEnd_toStartOf="@id/guide_bottom_v"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          android:layout_width="0dp"
          android:background="@color/colorPrimary"
          android:layout_height="0dp"/>


    <View android:onClick="onChangeGuide"
          android:tag="0.4,0.4"
          android:layout_margin="8dp"
          android:id="@+id/view_end_bottom"
          app:layout_constraintTop_toBottomOf="@id/guide_h"
          app:layout_constraintStart_toEndOf="@id/guide_bottom_v"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          android:layout_width="0dp"
          android:background="@color/colorPrimary"
          android:layout_height="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>