<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:clipToPadding="false"
        android:id="@+id/target_parent"
        android:gravity="center"
        tools:context=".TargetActivity">
    <View
            android:layout_alignParentTop="true"
            android:id="@+id/left_top"
            android:layout_alignParentStart="true"
            android:background="@color/colorPrimary" android:layout_width="120dp" android:layout_height="120dp"
            android:layout_margin="8dp"/>

    <ImageView
            android:layout_alignParentTop="true"
            android:id="@+id/right_top"
            android:elevation="16dp"
            android:layout_alignParentEnd="true"
            android:background="@mipmap/ic_launcher_round" android:layout_width="120dp" android:layout_height="120dp"
            android:layout_margin="8dp"/>


    <View
            android:layout_centerVertical="true"
            android:id="@+id/left_center"
            android:layout_alignParentStart="true"
            android:background="@color/colorPrimary" android:layout_width="120dp" android:layout_height="120dp"
            android:layout_margin="8dp"/>

    <View
            android:layout_centerVertical="true"
            android:id="@+id/right_center"
            android:layout_alignParentEnd="true"
            android:background="@color/colorPrimary" android:layout_width="120dp" android:layout_height="120dp"
            android:layout_margin="8dp"/>


    <View
            android:id="@+id/left_bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:transitionName="left_bottom"
            android:background="@color/colorPrimary" android:layout_width="120dp" android:layout_height="120dp"
            android:layout_margin="8dp"/>

    <View
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/right_bottom"
            android:background="@color/colorPrimary" android:layout_width="120dp" android:layout_height="120dp"
            android:layout_margin="8dp"/>

</RelativeLayout>