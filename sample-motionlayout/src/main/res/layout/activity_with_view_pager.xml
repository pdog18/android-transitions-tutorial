<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WithViewPager">

    <androidx.constraintlayout.motion.widget.MotionLayout
            android:layout_width="match_parent"
            android:id="@+id/motion_layout_with_view_pager"
            app:layoutDescription="@xml/scene_with_view_pager"
            android:layout_height="200dp">
        <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/image_filter_view"
                android:src="@mipmap/pre_avatar"
                app:altSrc="@mipmap/avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </androidx.constraintlayout.motion.widget.MotionLayout>

    <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:id="@+id/view_pager"
            android:layout_height="match_parent"/>

</LinearLayout>