<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@color/colorAccent"
             android:orientation="vertical">

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="@color/colorPrimary"
                  android:layout_gravity="center_vertical"
                  android:id="@+id/transitions_auto_container"
                  android:gravity="center"
                  android:orientation="vertical">

        <Button android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DO MAGIC"/>

        <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                android:text="Transitions are awesome!"/>
    </LinearLayout>


    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="end|center_vertical"
                  android:background="@color/colorPrimary"
                  android:gravity="center"
                  android:orientation="vertical">

        <Button android:id="@+id/button_pale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DO PALE"/>

        <TextView
                android:id="@+id/text_pale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="I'm pale and weak..."
                android:visibility="gone"/>
    </LinearLayout>

</FrameLayout>